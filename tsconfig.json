{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES6",
    "noUnusedLocals": false,
    "noEmitOnError": true,
    "allowUnreachableCode": false,
    "module": "ES6",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "removeComments": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": true,
}
